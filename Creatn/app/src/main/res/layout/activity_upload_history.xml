<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/wrapper"
    android:background="@drawable/background"
    tools:context="rocks.evesan.creatnapp.UploadHistory">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/clasifica_tu"
        android:textSize="24dp"
        android:id="@+id/textView1"
        android:textAlignment="center"
        android:layout_below="@id/textView"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/love"
        android:src="@drawable/love"
        android:layout_below="@id/textView1"
        android:background="@color/transparent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Amor"
        android:id="@+id/textView2"
        android:layout_below="@+id/love"
        android:layout_marginLeft="60dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/crime"
        android:src="@drawable/crimen"
        android:background="@color/transparent"
        android:layout_below="@id/textView1"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="230dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Crime"
        android:id="@+id/CrimeTxt"
        android:layout_below="@+id/crime"
        android:layout_marginLeft="220dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mitos"
        android:src="@drawable/mitos_urbanos"
        android:background="@color/transparent"
        android:layout_below="@id/crime"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Mitos"
        android:id="@+id/MitosTxt"
        android:layout_below="@+id/mitos"
        android:layout_marginLeft="20dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/historia"
        android:src="@drawable/historico"
        android:background="@color/transparent"
        android:layout_below="@id/crime"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="230dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Relatos"
        android:id="@+id/historiaTxt"
        android:layout_below="@+id/historia"
        android:layout_marginLeft="170dp"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play"
        android:src="@drawable/play"
        android:background="@color/transparent"
        android:layout_below="@id/mitos"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Escuchar"
        android:id="@+id/playTxt"
        android:layout_below="@+id/play"
        android:layout_marginLeft="70dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rerecord"
        android:src="@drawable/regrabar"
        android:background="@color/transparent"
        android:layout_below="@id/mitos"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="213dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Regrabar"
        android:id="@+id/rerecordTxt"
        android:layout_below="@+id/rerecord"
        android:layout_marginLeft="195dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre del audio"
        android:id="@+id/textView3"
        android:layout_below="@+id/playTxt"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:id="@+id/editText"
        android:textAlignment="center"
        android:textSize="22dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Â¡Listo!"
        android:id="@+id/upload"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:layout_below="@id/editText"
        android:background="@drawable/listobound"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
